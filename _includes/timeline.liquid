<div class="timeline">
  {% assign work = site.data.resume.work | sort: 'startDate' | reverse %}
  {% for job in work %}
    <div class="row mb-4">
      <div class="col-auto">
        {% if job.image %}
          <img src="{{ job.image | relative_url }}" alt="{{ job.name }}" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
        {% else %}
          <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
            <i class="fa-solid fa-briefcase text-muted"></i>
          </div>
        {% endif %}
      </div>
      <div class="col">
        <h5 class="mb-1 font-weight-bold">{{ job.position }}</h5>
        <h6 class="mb-1">{{ job.name }}</h6>
        <p class="text-muted small mb-2">
          {{ job.startDate | date: "%b %Y" }} - 
          {% if job.endDate %}
            {{ job.endDate | date: "%b %Y" }}
          {% else %}
            Present
          {% endif %}
           â€¢ {{ job.location }}
        </p>
        <p class="mb-0 text-muted">{{ job.summary }}</p>
      </div>
    </div>
  {% endfor %}
</div>
